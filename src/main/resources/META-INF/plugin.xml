<idea-plugin>
	<id>lekanich.eye-health</id>
	<name>Eye Health</name>
	<vendor email="lekan1992@gmail.com" url="https://github.com/Lekanich/Eye-Health">Aleksandr Zhelezniak</vendor>

	<description><![CDATA[
    It's a tool to help to manage your staring time to the display.<br>
    ]]></description>

	<!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
		 on how to target different products -->
	<depends>com.intellij.modules.platform</depends>

	<extensions defaultExtensionNs="com.intellij">
		<postStartupActivity implementation="lekanich.eye.PluginStartupActivity"/>

		<statusBarWidgetFactory implementation="lekanich.eye.EyeHelpTemporaryStatusBarWidgetFactory"/>

		<applicationService serviceImplementation="lekanich.eye.settings.PluginSettings"/>

		<applicationConfigurable instance="lekanich.eye.settings.PluginSettingsPage"/>
	</extensions>

	<extensionPoints>
		<extensionPoint name="exercises" beanClass="lekanich.eye.EyeExercise" dynamic="true"/>
	</extensionPoints>

	<extensions defaultExtensionNs="lekanich.eye-health">
		<exercises file="eye-press.html"/>
		<exercises file="eye-roll.html"/>
		<exercises file="figure-eights.html"/>
		<exercises file="palm-eye.html"/>
		<exercises file="palming-title.html"/>
		<exercises file="rule-20-20-20.html"/>
		<exercises file="simple.html"/>
		<exercises file="slow-blink.html"/>
		<exercises file="writing-messages-on-the-wall.html"/>
		<exercises file="zooming.html"/>
	</extensions>

	<actions>
		<action id="lekanich.eyeHelp" class="lekanich.eye.action.EyeHelpAction"
				icon="EyeHelpIcons.EYE_ON"
				text="Enable Eye Help" description="Enable eye help"/>

		<action id="lekanich.eyeHelp.temporary.disable" class="lekanich.eye.action.DisableTemporaryEyeHelpAction"
				icon="EyeHelpIcons.EYE_OFF"
				text="Temporary Disable Eye Help" description="Turn off until the end of the day"/>
	</actions>
</idea-plugin>